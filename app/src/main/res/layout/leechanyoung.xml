<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".leechanyoung">


    <Button
        android:id="@+id/button1_lcy"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="공지사항"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button2_lcy"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button2_lcy"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginBottom="50dp"
        android:text="가정통신문"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button3_lcy"
        app:layout_constraintEnd_toEndOf="@+id/button1_lcy"
        app:layout_constraintStart_toStartOf="@+id/button1_lcy"
        app:layout_constraintTop_toBottomOf="@+id/button1_lcy" />

    <Button
        android:id="@+id/button3_lcy"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginBottom="33dp"
        android:text="학사일정"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/button2_lcy"
        app:layout_constraintStart_toStartOf="@+id/button2_lcy"
        app:layout_constraintTop_toBottomOf="@+id/button2_lcy" />

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:background="#00000000"
        android:contentDescription="@string/error2"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/button5"
        app:layout_constraintBottom_toTopOf="@+id/button1_lcy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="123dp"
        android:gravity="center"
        android:text="버튼 클릭 후 화면이 뜨지 않는다면\n잠시만 기다려주세요."
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3_lcy" />



</androidx.constraintlayout.widget.ConstraintLayout>